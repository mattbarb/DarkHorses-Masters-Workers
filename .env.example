# Racing API Reference Data Fetcher - Environment Variables
# Copy this file to .env and fill in your actual credentials

# Racing API Credentials
# Sign up at: https://theracingapi.com
RACING_API_USERNAME=your_username_here
RACING_API_PASSWORD=your_password_here

# Racing API Configuration (optional - defaults provided)
RACING_API_BASE_URL=https://api.theracingapi.com/v1
RACING_API_TIMEOUT=30
RACING_API_MAX_RETRIES=5

# Supabase Database Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Supabase Configuration (optional - defaults provided)
SUPABASE_BATCH_SIZE=100

# Logging Configuration (optional)
LOG_LEVEL=INFO

# Regional Filtering (built-in, no configuration needed)
# This system automatically filters for UK (GB) and Ireland (IRE) data only
